%li
  %fieldset
    %dl
      %dt
        Collection date and time
      %dd
        = "#{ contribution.collection_date}  #{ contribution.collection_time.to_s(:time)} "
      %dt
        Products
      %dd
        - contribution.products.each do |p|
          %ul#products-list
            %li.product
              %span
                = "Quantity #{p.quantity}"
              %span
                = "Product Name: #{p.product_name}"
              %span
                = "Perishable: #{p.perishable}"
